#include <iostream>
using namespace std;
int main() {
    int num;
        cout << "Enter a number: ";
        cin >> num;
    if (num < 0) {
            cout << num << " is not a perfect square." <<endl;
        return 0;
    }
    int i;
    for (i = 0; i * i <= num; i++) {
        if (i * i == num) {
                cout << num << " is a perfect square." <<endl;
            return 0;
        }
    }
cout << num << " is not a perfect square." <<endl;
    return 0;
}
